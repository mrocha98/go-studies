# editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{csv,txt}]
insert_final_newline = false

[*.{md,mdx}]
# Two trailing spaces => newline in GitHub-flavored markdown
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.sql]
indent_size = 2
